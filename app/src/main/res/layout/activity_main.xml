<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.CalculatorActivity">

    <TextView
        android:id="@+id/tv_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/input_text"
        android:textAlignment="textEnd"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/_0"
        android:textAlignment="textEnd"
        android:textSize="50sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:padding="2dp"
        android:rowCount="5">
        <!-- 1st line-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear"
            style="@style/funcButtonStyle"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/c" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_square"
            style="@style/funcButtonStyle"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/square" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_divide"
            style="@style/funcButtonStyle"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/div" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_multiply"
            style="@style/funcButtonStyle"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/mul" />
        <!-- 2nd line-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_7"
            style="@style/numButtonStyle"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/_7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_8"
            style="@style/numButtonStyle"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/_8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_9"
            style="@style/numButtonStyle"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/_9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_minus"
            style="@style/funcButtonStyle"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/minus" />

        <!-- 3rd line -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_4"
            style="@style/numButtonStyle"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/_4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_5"
            style="@style/numButtonStyle"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/_5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_6"
            style="@style/numButtonStyle"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/_6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_plus"
            style="@style/funcButtonStyle"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/plus" />

        <!--4th line-->


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_1"
            style="@style/numButtonStyle"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/_1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_2"
            style="@style/numButtonStyle"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_3"
            style="@style/numButtonStyle"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/_3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_equals"
            style="@style/equalButtonStyle"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_gravity="fill_vertical"
            android:text="@string/equals" />

        <!-- 5th line -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dot"
            style="@style/numButtonStyle"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/dot" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_0"
            style="@style/numButtonStyle"
            android:layout_row="4"
            android:layout_column="1"
            android:text="@string/_0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_00"
            style="@style/numButtonStyle"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/_00" />

    </GridLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:layout_marginStart="20dp"
        android:textColor="@color/funcButtonTxtColor"
        android:backgroundTint="@color/funcButtonBgColor"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="2dp"
        app:cornerRadius="10dp"/>


</LinearLayout>